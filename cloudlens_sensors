    <!-- Tooltip element -->
    <div class="tooltip" id="tooltip">
        <div class="tooltip-title"></div>
        <div class="tooltip-content"></div>
    </div>

    <script>
        const svg = document.getElementById('flowSvg');
        const diagram = document.getElementById('diagram');
        const tooltip = document.getElementById('tooltip');
        let particles = [];
        let protocolLabels = [];
        let animationPaused = false;

        function updateSVGSize() {
            const rect = diagram.getBoundingClientRect();
            svg.setAttribute('width', rect.width);
            svg.setAttribute('height', rect.height);
        }

        function getElementCenter(id) {
            const el = document.getElementById(id);
            const rect = el.getBoundingClientRect();
            const containerRect = diagram.getBoundingClientRect();
            return {
                x: rect.left - containerRect.left + rect.width / 2,
                y: rect.top - containerRect.top + rect.height / 2,
                right: rect.right - containerRect.left,
                left: rect.left - containerRect.left,
                top: rect.top - containerRect.top,
                bottom: rect.bottom - containerRect.top
            };
        }

        function createLine(from, to, isControl = false) {
            const line = document.createElementNS('http://www.w3.org/2000/svg', 'line');
            line.setAttribute('x1', from.right);
            line.setAttribute('y1', from.y);
            line.setAttribute('x2', to.left);
            line.setAttribute('y2', to.y);
            line.setAttribute('class', isControl ? 'control-line' : 'flow-line');
            svg.appendChild(line);
            return { x1: from.right, y1: from.y, x2: to.left, y2: to.y };
        }

        function createFlowParticle(lineCoords, isControl = false) {
            const particle = document.createElement('div');
            particle.className = isControl ? 'particle control' : 'particle';
            diagram.appendChild(particle);

            let progress = Math.random();
            const speed = isControl ? 0.002 : 0.004;

            function animate() {
                if (!animationPaused) {
                    progress += speed;
                    if (progress > 1) progress = 0;

                    const x = lineCoords.x1 + (lineCoords.x2 - lineCoords.x1) * progress;
                    const y = lineCoords.y1 + (lineCoords.y2 - lineCoords.y1) * progress;

                    particle.style.left = x + 'px';
                    particle.style.top = y + 'px';
                }

                requestAnimationFrame(animate);
            }

            animate();
            particles.push(particle);
        }

        function createProtocolLabel(x, y, text) {
            const label = document.createElement('div');
            label.className = 'protocol-label';
            label.textContent = text;
            label.style.left = x + 'px';
            label.style.top = y + 'px';
            diagram.appendChild(label);
            protocolLabels.push(label);
        }

        function initializeFlows() {
            // Clear existing
            svg.innerHTML = '';
            particles.forEach(p => p.remove());
            protocolLabels.forEach(l => l.remove());
            particles = [];
            protocolLabels = [];
            updateSVGSize();

            // Get positions
            const vm1 = getElementCenter('vm1');
            const vm2 = getElementCenter('vm2');
            const vm3 = getElementCenter('vm3');
            const clms = getElementCenter('clms');
            const vpb = getElementCenter('vpb');
            const tool = getElementCenter('tool');

            // Data Plane: VMs ‚Üí vPB
            const lineVm1ToVpb = createLine(vm1, vpb);
            createFlowParticle(lineVm1ToVpb);
            createFlowParticle(lineVm1ToVpb);
            createProtocolLabel((lineVm1ToVpb.x1 + lineVm1ToVpb.x2) / 2 - 30, lineVm1ToVpb.y1 - 15, 'VXLAN:4789');

            const lineVm2ToVpb = createLine(vm2, vpb);
            createFlowParticle(lineVm2ToVpb);
            createFlowParticle(lineVm2ToVpb);

            const lineVm3ToVpb = createLine(vm3, vpb);
            createFlowParticle(lineVm3ToVpb);
            createFlowParticle(lineVm3ToVpb);
            createProtocolLabel((lineVm3ToVpb.x1 + lineVm3ToVpb.x2) / 2 - 30, lineVm3ToVpb.y1 + 5, 'VXLAN:4789');

            // Data Plane: vPB ‚Üí Tool
            const lineVpbToTool = createLine(vpb, tool);
            createFlowParticle(lineVpbToTool);
            createFlowParticle(lineVpbToTool);
            createFlowParticle(lineVpbToTool);
            createFlowParticle(lineVpbToTool);
            createProtocolLabel((lineVpbToTool.x1 + lineVpbToTool.x2) / 2 - 40, lineVpbToTool.y1 - 15, 'Aggregated Traffic');

            // Control Plane: CLMS ‚Üí VMs
            const lineClmsToVm1 = createLine(clms, vm1, true);
            createFlowParticle(lineClmsToVm1, true);

            const lineClmsToVm2 = createLine(clms, vm2, true);
            createFlowParticle(lineClmsToVm2, true);

            const lineClmsToVm3 = createLine(clms, vm3, true);
            createFlowParticle(lineClmsToVm3, true);
        }

        // Tooltip handling
        document.querySelectorAll('[data-tooltip]').forEach(el => {
            el.addEventListener('mouseenter', (e) => {
                const tooltipText = el.getAttribute('data-tooltip');
                const title = el.querySelector('.node-title').textContent;

                tooltip.querySelector('.tooltip-title').textContent = title;
                tooltip.querySelector('.tooltip-content').textContent = tooltipText;
                tooltip.classList.add('visible');
            });

            el.addEventListener('mousemove', (e) => {
                tooltip.style.left = (e.pageX + 15) + 'px';
                tooltip.style.top = (e.pageY + 15) + 'px';
            });

            el.addEventListener('mouseleave', () => {
                tooltip.classList.remove('visible');
            });
        });

        // Toggle animation pause/play
        function toggleAnimation() {
            animationPaused = !animationPaused;
            const btn = document.querySelector('.control-btn');
            btn.textContent = animationPaused ? '‚ñ∂Ô∏è Resume Animation' : '‚è∏Ô∏è Pause Animation';
        }

        // Initialize
        setTimeout(initializeFlows, 100);
        window.addEventListener('resize', () => setTimeout(initializeFlows, 100));
    </script>
</body>
</html>
