            <!-- Legend -->
            <div class="legend">
                <div class="legend-title">üé® Architecture Legend</div>
                <div class="legend-grid">
                    <div class="legend-item">
                        <div class="legend-icon ubuntu"></div>
                        <div class="legend-text">Ubuntu Server (eBPF Sensor)</div>
                    </div>
                    <div class="legend-item">
